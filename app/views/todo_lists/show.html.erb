<div class="wrapper">
	<h1>Showing Todo List: <%= @todo_list.title %></h1>
	<div class="todo_list">
		<h2><%= @todo_list.title %></h2>
		<p><%= @todo_list.description %></p>
		<div class="vert-spacing"></div>
		<p>
			<% if @todo_list.has_incomplete_items? %>
				<h3>Incomplete Items:</h3>
				
				<ul>
					<% @todo_list.todo_items.incomplete.each do |todo_item| %>
						<li><%= todo_item.content %></li>
					<% end %>
				</ul>
			<% end %>
		</p>
		<div class="vert-spacing"></div>
		<p>
			<% if @todo_list.has_completed_items? %>
				<h3>Completed Items:</h3>
				
				<ul>
					<% @todo_list.todo_items.complete.each do |todo_item| %>
						<li><%= todo_item.content %></li>
					<% end %>
				</ul>
			<% end %>
		</p>
		<div class="vert-spacing"></div>
		<ul class="functions">
			<li><%= link_to 'Edit', edit_todo_list_path(@todo_list) %> |</li>
			<li><%= link_to 'Back', todo_lists_path %></li>
		</ul>
		<br class="clear" />
	</div>
</div>